<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="insert_robot_name_here">

  <link name="base">
    <visual>
      <geometry>
        <box size="0.94 0.78 1.98"/>
      </geometry>
    </visual>
  </link>

  <link name="laser_vert_bottom">
    <visual>
      <geometry>
        <box size="0.062 0.062 0.087"/>
      </geometry>
      <origin rpy="3.1355 -1.3045 0.0025" xyz="0.3158 -0.0021 0.5100"/>
    </visual>
  </link>
  
  <joint name="base_to_laser_vert_bottom" type="fixed">
    <parent link="base"/>
    <child link="laser_vert_bottom"/>
  </joint>
  
  <link name="laser_vert_top_right">
    <visual>
      <geometry>
        <box size="0.062 0.062 0.087"/>
      </geometry>
    </visual>
  </link>

  <joint name="base_to_laser_vert_top_right" type="fixed">
    <parent link="base"/>
    <child link="laser_vert_top_right"/>
    <origin xyz="0.2978 -0.1450 1.8451" rpy="-1.1760 0.6313 -1.9377"/>
  </joint>

  <link name="laser_vert_top_left">
    <visual>
      <geometry>
        <box size="0.062 0.062 0.087"/>
      </geometry>
    <origin rpy="1.1780 0.6198 1.9560" xyz="0.2997 0.1531 1.8443"/>
    </visual>
  </link>

  <joint name="base_to_laser_vert_top_left" type="fixed">
    <parent link="base"/>
    <child link="laser_vert_top_left"/>
  </joint>

  <link name="laser_horiz">
    <visual>
      <geometry>
        <cylinder length="0.072" radius="0.052"/>
      </geometry>
      <origin rpy="-0.0012 0.1146 -0.0015" xyz="0.2325 0.0001 1.9201"/>
    </visual>
  </link>

  <joint name="base_to_laser_horiz" type="fixed">
    <parent link="base"/>
    <child link="laser_horiz"/>
  </joint>

<xacro:macro name="xacro_name" params="suffix reflect">
  <link name="wheel_${suffix}">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.2"/>
      </geometry>
      <origin rpy="${-pi/2} 0.0 0.0" xyz="0.1 ${reflect * -0.4} 0.0"/>
    </visual>
  </link>

  <joint name="base_to_wheel_${suffix}" type="continuous">
    <parent link="base"/>
    <child link="wheel_${suffix}"/>
    <limit effort="1" velocity="1"/>
  </joint>
</xacro:macro>
<xacro:xacro_name suffix="left" reflect="1" />
<xacro:xacro_name suffix="right" reflect="-1" />
  
  <link name="wheel_center">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.15"/>
      </geometry>
      <origin rpy="${-pi/2} 0.0 0.0" xyz="0.1 0.0 0.0"/>
    </visual>
  </link>

  <joint name="base_to_wheel_center" type="continuous">
    <parent link="base"/>
    <child link="wheel_center"/>
    <limit effort="1" velocity="1"/>
  </joint>


</robot >


